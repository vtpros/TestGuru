<tr>
  <td class='align-middle'>
    <%= tag.span test.title, class: 'test-title', data: { test_id: test.id } %>
    <%= render 'form_inline', test: (test == @test ? @test : test)  %>
  </td>
  <td class='align-middle'><%= test.level %></td>
  <td class='align-middle'><%= test.questions.count %></td>
  <td class='align-middle'><%= link_to t('app.show'), admin_test_path(test) %></td>
  <td class='align-middle'>
    <%= link_to t('app.edit'),
                edit_admin_test_path(test),
                data: { test_id: test.id },
                class: 'form-inline-link' %>
  </td>
  <td class='align-middle'>
    <%= link_to t('app.delete'),
                admin_test_path(test),
                method: :delete,
                data: { confirm: t('app.sure?') }
    %>
  </td>
</tr>

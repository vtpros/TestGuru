<%= form_with(model: [:admin, @question, @answer], local: true) do |f| %>
  <%= render 'shared/errors/errors_list', resource: @answer %>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body, id: :answer_body, rows: 7, cols: 60 %>
  </p>

  <p>
    <%= f.label :correct %>
    <%= f.check_box :correct, id: :answer_corrext %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
